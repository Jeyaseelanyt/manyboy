<div class="span5" style="margin:0 auto;float:none"> 
  <h2>Forgot your password?</h2>

<%= simple_form_for(resource, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
  
  <legend></legend>
  <%= f.input :email %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary btn-large', :value => "Send me reset instructions" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>